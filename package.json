{
  "name": "chromatrix",
  "version": "1.0.0",
  "description": "A colorful utility for the web",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.mts",
        "require": "./dist/index.d.cts"
      },
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "check": "biome check --write",
    "dev": "tsdown --watch",
    "format": "biome format --write",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "bench": "vitest bench"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "4.0.18",
    "tsdown": "0.20.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
